pipeline {
  agent any

  environment {
    DOCKER_BFLASK_IMAGE = "kezara666/myjava1:latest"
    DOCKER_REGISTRY_CREDS = 'your-jenkins-dockerhub-creds-id'
  }

  stages {
    stage('Build') {
      steps {
        script {
          bat 'docker build -t myjava1 .'
          bat "docker tag myjava1 %DOCKER_BFLASK_IMAGE%"
        }
      }
    }

    stage('Test') {
      steps {
        bat 'docker run myjava1'
      }
    }

    stage('Deploy') {
      steps {
        withCredentials([usernamePassword(credentialsId: "${DOCKER_REGISTRY_CREDS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
          bat "echo %DOCKER_PASSWORD% | docker login -u %DOCKER_USERNAME% --password-stdin"
          bat "docker push %DOCKER_BFLASK_IMAGE%"
        }
      }
    }
  }

  post {
    always {
      bat 'docker logout'
    }
  }
}
